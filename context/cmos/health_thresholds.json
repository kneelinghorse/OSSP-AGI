{
  "description": "Health threshold configuration for CMOS context monitoring",
  "version": "1.0.0",
  "lastCalibrated": "2025-01-17",
  
  "metrics": {
    "hysteresis": {
      "description": "Temporal Hysteresis - detects context degradation zones",
      "warn": 0.6,
      "critical": 0.8,
      "unit": "normalized",
      "interpretation": "Higher values indicate context is stuck in degraded state"
    },
    
    "complexity": {
      "description": "Temporal Complexity (TDM) - measures context entropy",
      "warn": 0.7,
      "critical": 0.85,
      "unit": "normalized_entropy",
      "interpretation": "Higher values indicate unpredictable context behavior"
    },
    
    "momentum": {
      "description": "Directional Momentum - tracks improvement/degradation trends",
      "warn": 0.3,
      "critical": 0.2,
      "unit": "trend_score",
      "interpretation": "Lower values indicate negative momentum (degradation)"
    },
    
    "fairness": {
      "description": "Queue Position Fairness - ensures balanced updates",
      "warn": 0.35,
      "critical": 0.25,
      "unit": "gini_coefficient",
      "interpretation": "Lower values indicate unfair distribution of updates"
    },
    
    "symmetry": {
      "description": "Crescendo Symmetry - detects explosion patterns",
      "warn": 0.4,
      "critical": 0.2,
      "unit": "balance_ratio",
      "interpretation": "Lower values indicate asymmetric growth (potential explosion)"
    }
  },
  
  "viability": {
    "description": "Defines the viable operating region for context health",
    
    "hysteresis": {
      "min": 0.0,
      "max": 0.6,
      "optimal": 0.2
    },
    
    "complexity": {
      "min": 0.1,
      "max": 0.7,
      "optimal": 0.4
    },
    
    "momentum": {
      "min": 0.3,
      "max": 1.0,
      "optimal": 0.7
    },
    
    "fairness": {
      "min": 0.35,
      "max": 1.0,
      "optimal": 0.8
    },
    
    "symmetry": {
      "min": 0.4,
      "max": 1.0,
      "optimal": 0.8
    }
  },
  
  "contextSizeLimits": {
    "optimal": 15,
    "warn": 30,
    "critical": 50,
    "maximum": 100,
    "unit": "kilobytes",
    "compressionTrigger": 40
  },
  
  "performanceTargets": {
    "assessmentLatency": {
      "target": 50,
      "maximum": 100,
      "unit": "milliseconds"
    },
    
    "compressionRatio": {
      "target": 4,
      "minimum": 2,
      "unit": "ratio"
    },
    
    "relevanceRetention": {
      "target": 0.9,
      "minimum": 0.8,
      "unit": "percentage"
    }
  },
  
  "alertingRules": {
    "enabled": true,
    
    "criticalAlertThreshold": 2,
    "warningAlertThreshold": 3,
    
    "cooldownPeriods": {
      "critical": 300,
      "warning": 60,
      "unit": "seconds"
    },
    
    "escalation": {
      "enabled": true,
      "warningsBeforeEscalation": 5,
      "escalationAction": "triggerCompression"
    }
  },
  
  "calibration": {
    "mode": "adaptive",
    "learningRate": 0.1,
    "historyWindow": 100,
    
    "adjustmentRules": {
      "tooManyCriticals": {
        "threshold": 5,
        "action": "increaseThresholds",
        "amount": 0.05
      },
      
      "tooFewWarnings": {
        "threshold": 1,
        "action": "decreaseThresholds",
        "amount": 0.03
      }
    }
  },
  
  "notes": {
    "rationale": "Thresholds based on Protocol Suite metric characteristics and expected context behavior patterns",
    "tuning": "These are initial values - should be calibrated based on actual usage patterns",
    "dependencies": "Requires Protocol Suite temporal metrics for accurate calculations"
  }
}